{% render 'partials/head.liquid', title: 'Squad page' %}




    <header class="hero">
      <video class="hero-bg-video" src="assets/background/backgroundHVA.mp4" autoplay loop muted playsinline></video>
      <div class="hero-bg-blur"></div>
      <section class="hero-content">
        <h1>Welkom op <br>de</br> squad page<br>van Squad</br>1i</h1>
      </section>
      <section class="team">
        <h2 class="team-title">Het team</h2>
        <article class="member">
          <img src="assets/squadfoto's/Jaar 1/Squad1I-Thomas.JPG" alt="Thomas">
          <h3>Thomas</h3>
          <a href="https://thomasseisveld.github.io/profilecard-Thomas/" target="_blank" class="btn">Meer</a>
        </article>
        <article class="member">
          <img src="assets/squadfoto's/Jaar 1/Squad1I-Tin.JPG" alt="Tin">
          <h3>Tin</h3>
          <a href="https://webtins.github.io/your-tribe-profile-card/" target="_blank" class="btn">Meer</a>
        </article>
        <article class="member">
          <img src="assets/squadfoto's/Jaar 1/Squad1I-Oumaima.JPG" alt="Oumaima">
          <h3>Oumaima</h3>
          <a href="https://meemo99.github.io/your-tribe-profile-card/" target="_blank" class="btn">Meer</a>
        </article>
      </section>
    </header>


<main class="main" role="main">
  <section class="row">
        <!-- Squad Page Panel -->
        <nav class="tabs" role="tablist">
          <button id="tab-squad" class="tab selected" role="tab" data-tab="panel-squad">Squad Page</button>
          <button id="tab-locaties" class="tab" role="tab" data-tab="panel-locaties">Favoriete Locaties</button>
        </nav>
  <article id="panel-squad" class="panel" role="tabpanel" data-active="true">
          <section class="squad">
            <h2>Squad Page</h2>
            <form method="get" action="/" class="filter-form">
              <label for="filter-select">Filter op:</label>
              <select id="filter-select" name="filter" onchange="this.form.submit()">
                <option value="name" {% if filterBy == 'name' %}selected{% endif %}>Naam</option>
                <option value="birthdate" {% if filterBy == 'birthdate' %}selected{% endif %}>Geboortedatum</option>
              </select>
            </form>
            <section class="squad-members">
              <section class="squad-slider">
                <section class="squad-track">
                  {% for person in persons %}
                  <article class="member" style="border: 3px solid {{ person.fav_color }};">
                    <img src="{{ person.avatar }}" alt="{{ person.name }}">
                    <h3>{{ person.name }}</h3>
                    {% if filterBy == 'birthdate' and person.daysUntilBirthday %}
                    <p class="birthday-countdown">{{ person.daysUntilBirthday }} dagen tot verjaardag</p>
                    {% endif %}
                    <a href="/student/{{ person.id }}" class="btn">Meer</a>
                  </article>
                  {% endfor %}
                </section>
              </section>
            </section>
          </section>
  </article>
  <section id="panel-locaties" class="panel favorites" role="tabpanel" data-active="false">
          <h2>Favoriete Locaties</h2>
          <section class="locations">
            <article class="location">
              <img src="assets/Gebouw foto's/Kohnstamhuis.jpg" alt="Kohnstamhuis">
              <p>Kohnstamhuis</p>
            </article>
            <article class="location">
              <img src="assets/Gebouw foto's/Theo Thijssenhuis.jpg" alt="Theo Thijssenhuis">
              <p>Theo Thijssenhuis</p>
            </article>
            <article class="location">
              <img src="assets/Gebouw foto's/Wibauthuis.jpg" alt="Wibauthuis">
              <p>Wibauthuis</p>
            </article>
          </section>
        </section>
      </section>
    </main>
<ul>
  {% for person in persons %}
    <li><a href="/student/{{ person.id }}">{{ person.name }}</a></li>
  {% endfor %}
</ul>

{% render 'partials/foot.liquid', squads: squads %}